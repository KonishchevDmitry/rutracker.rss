#!/usr/bin/env python

"""Adds a blacklist rule."""

import pycl.main
pycl.main.set_environment()

import sys

from pycl.core import Error
from pycl.misc import to_unicode

from rutracker import blacklist


def main():
    """The script's main function."""

    if len(sys.argv) != 2:
        sys.exit(u"Usage: {cmd} rule".format(cmd = to_unicode(sys.argv[0])))

    blacklist.add(to_unicode(sys.argv[1]))


if __name__ == "__main__":
    main()
