#!/usr/bin/env python

"""Adds a torrent to blacklist."""

from __future__ import unicode_literals

import sys

import pycl.cli.utils
import pycl.main
from pycl.misc import to_unicode

import rutracker.torrents
from rutracker import blacklist


def main():
    """The script's main function."""

    pycl.main.setup_environment()

    if len(sys.argv) != 1:
        sys.exit("Usage: {cmd}".format(cmd = to_unicode(sys.argv[0])))

    torrent_name = to_unicode(raw_input("Please enter the torrent name: "))
    fingerprint = rutracker.torrents.get_fingerprint(torrent_name)
    if pycl.cli.utils.question_user("Add '{0}' to the blacklist?", fingerprint):
        blacklist.add(fingerprint)


if __name__ == "__main__":
    main()
