#!/usr/bin/env python

"""Initializes the database."""

from __future__ import unicode_literals

import sys

import pycl.main
from pycl.misc import to_unicode

import rutracker.torrents


def main():
    """The script's main function."""

    pycl.main.setup_environment()

    if len(sys.argv) != 1:
        sys.exit("Invalid argument: {arg}\nUsage: {command}".format(
            arg = to_unicode(sys.argv[1]), command = to_unicode(sys.argv[0])))

    rutracker.torrents.init()


if __name__ == "__main__":
    main()
